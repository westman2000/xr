<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- This is necessary due to a known issue causing a higher minSDK than intended -->
    <!-- copy/paste this from github sample, but in this project i set min sdk to 34 -->
    <uses-sdk tools:overrideLibrary="androidx.xr.scenecore, androidx.xr.compose"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.XRExp"
        tools:targetApi="31"
        tools:ignore="ObsoleteSdkInt">

        <!-- This will start app in HOME space mode by default at beginning -->
        <!-- https://developer.android.com/develop/xr/jetpack-xr-sdk/transition-home-space-to-full-space#declare-default-mode -->
        <property
            android:name="android.window.PROPERTY_XR_ACTIVITY_START_MODE"
            android:value="XR_ACTIVITY_START_MODE_HOME_SPACE_MANAGED" />

        <!-- This will start app in FULL space mode by default at beginning -->
<!--        <property-->
<!--            android:name="android.window.PROPERTY_XR_ACTIVITY_START_MODE"-->
<!--            android:value="XR_ACTIVITY_START_MODE_FULL_SPACE_MANAGED" />-->

        <activity
            android:name=".MainVideoActivity"
            android:exported="true"
            android:theme="@style/Theme.XRExp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>